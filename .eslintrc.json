{
    "env": {
        "commonjs": true,
        "es6": true,
        "mocha": true
    },

    "extends": "eslint:recommended",

    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": true,
        "ecmaVersion": 2018
    },
    "rules": {
        "no-console": "off"
    }
}